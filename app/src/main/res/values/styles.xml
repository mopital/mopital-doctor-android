<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_light</item>
        <item name="colorPrimaryDark">@color/app_color_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>

    <style name="sign_in_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_color_dark</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
    </style>
    <style name="PatientTableKey">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PatientTableValue">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
