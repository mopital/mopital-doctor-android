<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="ID: " />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="532421" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Recorded At: " />

            <TextView
                android:id="@+id/recorded_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="42342" />
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Diagnosis: " />

            <TextView
                android:id="@+id/diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="Diagnosis" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Allergy: " />

            <TextView
                android:id="@+id/allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="None" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Blood Type: " />

            <TextView
                android:id="@+id/blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="A+" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Nurse: " />

            <TextView
                android:id="@+id/nurse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="Selma" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Patient Pain "
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Region: " />

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="Head" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PatientTableKey"
                android:layout_marginBottom="5dp"
                android:text="Type of Pain: " />

            <TextView
                android:id="@+id/type_of_pain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="Constant" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableKey"
                android:text="Duration: " />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                style="@style/PatientTableValue"
                android:text="A year" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/blood_sugar_monitoring_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Sugar Monitoring Records"></Button>

        <Button
            android:id="@+id/periodic_monitoring_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodic Monitoring Records"></Button>
        </LinearLayout>
</LinearLayout>